<?xml version="1.0" encoding="UTF-8"?>
<!-- HelloWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	
 <ui:style>
    .title { 
    	background-color: Skyblue; 
      	color: black;
      	font-size: 16pt;
      	text-align: center;
      	vertical-align: middle;
    }
  </ui:style>

  <g:DockLayoutPanel unit='EM'>
  <g:north size='5'>
    <g:Label styleName='{style.title}' ui:field="label">Top</g:Label>
  </g:north>
  <g:west size='10'>
    <g:HTML>
      <ul>
        <li>Sidebar</li>
        <li>Sidebar</li>
        <li>Sidebar</li>
      </ul>
    </g:HTML>
  </g:west>
  <g:center>
    <g:Label>Body</g:Label>
  </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>