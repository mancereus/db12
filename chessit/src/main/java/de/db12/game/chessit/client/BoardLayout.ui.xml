<?xml version="1.0" encoding="UTF-8"?>
	<!-- HelloWorld.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.topright {
			width: 200px;
		}
		.title {
			background-color: black;
			color: white;
			width: 1000px;
			font-size: 16pt;
			text-align: center;
			vertical-align: middle;
		}
		
		.hand {
			background-color: black;
			color: white;
			font-size: 16pt;
			text-align: center;
			vertical-align: middle;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='4'>
			<g:HorizontalPanel>
				<g:Label styleName='{style.title}'>Schachen - the essence of chess</g:Label>
				<g:Label styleName="{style.topright}"></g:Label>
			</g:HorizontalPanel>
		</g:north>
		<g:east size='20'>
			<g:DockLayoutPanel unit='EM'>
				<g:north size='10'>
					<g:FlowPanel styleName='{style.hand}' ui:field="whand"></g:FlowPanel>
				</g:north>
				<g:north size='10'>
					<g:FlowPanel styleName='{style.hand}' ui:field="bhand"></g:FlowPanel>
				</g:north>
				<g:north size='20'>
					<g:FlowPanel styleName='{style.hand}'  ui:field="help"></g:FlowPanel>
				</g:north>
				<g:south size='10'>
					<g:FlowPanel styleName='{style.hand}'  ui:field="wdrop"></g:FlowPanel>
				</g:south>
				<g:south size='10'>
					<g:FlowPanel styleName='{style.hand}'  ui:field="bdrop"></g:FlowPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:east>
		<g:center>
			<g:AbsolutePanel ui:field="table">
			</g:AbsolutePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>